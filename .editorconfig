# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
charset = utf-8
max_line_length = 80
tab_width = 4
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = false
ij_smart_tabs = false
ij_visual_guides = none
ij_wrap_on_typing = false

[Makefile]
indent_style = tab

[{*.clj,*.cljs,*.cljc}]
indent_size = 2
tab_width = 2
ij_clojure_alignbindingforms = false
ij_clojure_alignmapvalues = false
ij_clojure_alignreaderconditionals = true
ij_clojure_commentaligncolumn = 1
ij_clojure_defaultonlyindent = false
ij_clojure_docstringfillwidth = 80
ij_clojure_forceonlyindent = false
ij_clojure_keepnssorted = true
ij_clojure_keepsinglensrequireinvector = true
ij_clojure_nsimportsuse = list
ij_clojure_nsrequiresuse = vector
ij_clojure_onespacelists = true
ij_clojure_userecommendednsclauseorder = true
ij_clojure_userecommendednscollections = true